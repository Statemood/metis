# Project metis:
#   http://github.com/Statemood/metis-2.1
# ------------------------------------------

. $(dirname $(dirname $0))/fun/load || exit 1

load metis:cfg:settings
load metis:fun:default
load metis:fun:check
load metis:fun:db

#check range time work
#check login
#check user

for args in "$@"
do
    case $args in
        but)
            # test
            ;;
        cmd)
            Commands="$2"
            check input   "$Commans"
            #check command "$command"
            shift 1
            ;;
        except)
            # test
            ;;
        file)
            FileName="$2"
            check input   "$filename"
            check file    "$filename"
            shift 2
            ;;
        get)
	        # get remote-file from server 10.1 save to local-path
            check input  "$2"
            server=`echo "$2" | awk -F ':' '{print $1}'`
            source=`echo "$2" | awk -F ':' '{print $2}'`
            saveto="$3"
            check exist  $saveto
            shift 
            ;;
        send)
	        # send file local-file to server 10.1
			#					   to group  dbs  except xx1,xx2,xx3
	        # send cmd  "ls" 	   to server 10.1
	        #					   to group  dbs
            SendAction="$2"
	        check input  "$2"
	        check accept "$2" "file|cmd"
            shift 1
	        ;;
        to)
            totarget="$2"
            echo "$totarget" | awk -F ':' '{print $1}' | grep -q "group"
            if [ $? = 0 ]
            then
                fun_group
            else
                fun_server "$totarget"
            fi
            shift 2
            ;;
        group)
	        check   input "$2"
	        db      group "$2"
		    connect group "$server_list" "$action"
		    shift
	        ;;
	    by)
		    check input "$2"
		    group_by="$2"
		    shift
		    ;;
        server)
            Keywords="$2"
			check   input  "$SERVER_ARG"
			db      server "$SERVER_ARG" 
			connect server "$server_list" "$action"
			shift
			;;
        info)
	        check input "$2"
		    check perm  "$2"
		    db    info  "$2"
		    Print info  "$db_result" 
	        check input "$2"
		    check perm  "$2"
		    db info     "$2"
		    Print info  "$db_result" 
		    ;;
        search)
	        check input  "$2"
	        check empty  "$db_result"
	        Print list   "$db_result"
	        input rt 	 "userinput"
	        ;;
        login)
	        check input    "$2"
	        db    server   "$2"
	        connect server "$server_login"
	        ;;
        option)
	        check input  "$2"
	        check option "$2"
	        shift
	        ;;
        transfer)
	        check input   "$2"
	        check arg   2 "$2"
	        source_host=
	        source_file=
	        destsv_host=
	        destsv_file=
	        db server "$source_host"
	        db server "$destsv_host"
	        transmission $source_host:$source_file $destsv_host:$destsv_file
	        ;;        
	    version)
		    msg version metis
            ;;
        help)
            msg help metis
            ;;
    esac
done
